<p> You have visited this page <%= @visist_count %> times!</p>

<section>
  <div class="row">
    <% @products.each do |product| %>

    <div class="col-sm-4">
          <div class="card" style="width: 15rem;">
          <img class="img-fluid" alt="Responsive image" src="<%= product.images.first.url %>" alt="<%= product.name%>">
          <div class="card-body">
              <h4 class="card-title"> <%= product.name %> </h4>
              <p class="card-text"> <%= product.description %> </p>
              <p class="card-text"> <%= number_to_currency product.price %> </p>
              <a href="/products/<%= product.id %>" class="btn btn-primary">Details</a>
          </div>
        </div>
      </div>
<% end %>
</div>
</section>